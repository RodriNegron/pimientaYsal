<%- include("../partials/head.ejs") %> 
<%- include("../partials/header.ejs") %> 

    <!-- Page content -->
    <div class="ps-content">

        <!-- Menu Section -->
        <div class="ps-row ps-padding-64" id="menu">
          <div class="ps-col l6 ps-padding-large">
            <h1 class="ps-center"><%=platosMenu[idPlato].nombre%> </h1>
            <br />
            <% if(platosMenu[idPlato].descripcion) {%> 
            <h4><%=platosMenu[idPlato].descripcion%></h4>
            <% } else { %> 
              <h4>Plato Tipico</h4>
            <% } %> 
            <p class="ps-text-grey">
                <%=platosMenu[idPlato].precio%>
            </p>
          </div>
  
          <div class="ps-col l6 ps-padding-large ps-img-menu">
            <img
              src="<%=platosMenu[idPlato].imagen%>"
              class="ps-round ps-image ps-opacity-min"
              alt="Menu"
            />
          </div>
        </div>


