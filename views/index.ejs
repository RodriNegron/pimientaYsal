<%- include("../partials/head.ejs") %> 
<%- include("../partials/header.ejs") %> 
    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="<%=aboutUs.imagen %> "
            class="ps-round ps-image ps-opacity-min"
            alt="SAbores que enamoran"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"><%=aboutUs.nombre%></h1>
          <br />
          <p class="ps-large">
            <%=aboutUs.descripcion1%>
            <span class="ps-tag ps-light-grey"></span>.
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%=aboutUs.descripcion2%>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br/>
          <% for( let index = 0; index < platosMenu.length; index++ ) { %>
            <a href="/detalle/<%=index%>"><h4><%=platosMenu[index].nombre %> </h4></a>
            <p class="ps-text-grey">
              <%=platosMenu[index].descripcion %>
              <%=platosMenu[index].precio %>
            </p>
          <% } %>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>
      <%- include("../partials/footer.ejs") %> 